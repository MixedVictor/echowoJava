<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0" />
    <object class="AdwWindow" id="window">
        <property name="title">echowoJava</property>
        <property name="width-request">640</property>
        <property name="height-request">480</property>
        <property name="content">
            <object class="AdwToastOverlay" id="toast_overlay">
                <child>
                    <object class="AdwToolbarView">
                        <property name="top-bar-style">1</property>
                        <child type="top">
                            <object class="AdwHeaderBar">
                                <child type="start">
                                    <object class="GtkButton" id="translate_button">
                                        <property name="label" translatable="true">Translate</property>
                                        <property name="tooltip-markup" translatable="true">Translate Text</property>
                                        <property name="action-name">app.translate_text</property>
                                    </object>
                                </child>
                                <child type="start">
                                    <object class="GtkButton" id="clear_button">
                                        <property name="icon-name">edit-clear-symbolic</property>
                                        <property name="tooltip-markup" translatable="true">Clear Edit Box</property>
                                        <property name="css-classes">destructive-action</property>
                                        <property name="action-name">app.clear_text</property>
                                    </object>
                                </child>
                                <child type="start">
                                    <object class="GtkSeparator">
                                        <property name="css-classes">spacer</property>
                                    </object>
                                </child>
                                <child type="start">
                                    <object class="GtkButton" id="copy_button">
                                        <property name="icon-name">edit-copy-symbolic</property>
                                        <property name="tooltip-markup" translatable="true">Quick Copy Translated Text</property>
                                        <property name="action-name">app.copy_text</property>
                                    </object>
                                </child>
                                <child type="start">
                                    <object class="GtkButton" id="paste_button">
                                        <property name="icon-name">edit-paste-symbolic</property>
                                        <property name="tooltip-markup" translatable="true">Quick Paste from Clipboard</property>
                                        <property name="action-name">app.paste_text</property>
                                    </object>
                                </child>
                                <child type="end">
                                    <object class="GtkMenuButton" id="menu_button">
                                        <!-- Some stuff straight out doesn't work here in the UI file -->
                                        <!-- Like the "menu-model" property here and the style classes -->
                                        <!-- Probably because of something in java-gtk -->
                                        <property name="icon-name">open-menu-symbolic</property>
                                        <property name="primary">true</property>
                                        <property name="menu-model">menu</property>
                                    </object>
                                </child>
                                <child type="end">
                                    <object class="GtkSeparator">
                                        <property name="css-classes">spacer</property>
                                    </object>
                                </child>
                                <child type="end">
                                    <object class="GtkToggleButton" id="toggle_uwus">
                                        <property name="active">True</property>
                                        <property name="label" translatable="true">uwu's</property>
                                        <property name="tooltip-text" translatable="true">Toggle UwU's</property>
                                        <property name="action-name">app.toggle_uwus</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="GtkBox">
                                <!-- Truly a GTK moment, start-end with margin on left and left-right with margin on right -->
                                <property name="margin-bottom">12</property>
                                <property name="margin-start">12</property>
                                <property name="margin-end">12</property>
                                <property name="margin-top">12</property>
                                <property name="spacing">12</property>
                                <property name="orientation">1</property>
                                <child>
                                    <object class="GtkFrame">
                                        <property name="vexpand">true</property>
                                        <child>
                                            <object class="GtkScrolledWindow">
                                                <child>
                                                    <object class="GtkTextView" id="edit_area">
                                                        <property name="bottom-margin">12</property>
                                                        <property name="left-margin">12</property>
                                                        <property name="right-margin">12</property>
                                                        <property name="top-margin">12</property>
                                                        <property name="editable">true</property>
                                                        <property name="cursor-visible">true</property>
                                                        <property name="wrap-mode">1</property>
                                                    </object>
                                                </child>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkFrame">
                                        <property name="vexpand">true</property>
                                        <child>
                                            <object class="GtkScrolledWindow">
                                                <child>
                                                    <object class="GtkTextView" id="translate_area">
                                                        <property name="bottom-margin">12</property>
                                                        <property name="left-margin">12</property>
                                                        <property name="right-margin">12</property>
                                                        <property name="top-margin">12</property>
                                                        <property name="editable">false</property>
                                                        <property name="cursor-visible">false</property>
                                                        <property name="wrap-mode">1</property>
                                                    </object>
                                                </child>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </property>
    </object>
</interface>