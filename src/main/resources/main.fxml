<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mixedvictor.echowojava.GuiController"
            prefHeight="360.0" prefWidth="640.0">
    <VBox fx:id="rootVbox" spacing="7">
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Save" onAction="#handleSaveFile"/>
                <MenuItem text="Open" onAction="#handleOpenFile"/>
            </Menu>
        </MenuBar>
        <TextArea fx:id="editBox" wrapText="true" VBox.margin="$vboxInsets" />
        <HBox spacing="7" alignment="CENTER" fx:id="rootHbox">
            <Button fx:id="translateButton" text="Translate" onAction="#handleTranslate" />
            <Button fx:id="copyButton" text="Copy" onAction="#handleCopy" />
            <Button fx:id="pasteButton" text="Paste" onAction="#handlePaste" />
        </HBox>
        <TextArea fx:id="translateBox" wrapText="true" VBox.margin="$vboxInsets" />
    </VBox>
</AnchorPane>